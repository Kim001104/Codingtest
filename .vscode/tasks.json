{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make build dir (per-category)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "New-Item -ItemType Directory -Force -Path '${workspaceFolder}/${relativeFileDirname}/../build' | Out-Null"
      ]
    },
    {
      "label": "build C (per-category)",
      "type": "shell",
      "command": "C:/mingw64/bin/gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/${relativeFileDirname}/../build/${fileBasenameNoExtension}.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": "make build dir (per-category)"
    }
  ]
}
