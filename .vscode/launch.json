{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug active C file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",
      "externalConsole": false,            // ✅ 이 한 줄만 있으면 됨
      "preLaunchTask": "build active C file (MinGW)",
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true }
      ]
    },
